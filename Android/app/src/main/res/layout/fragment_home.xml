<!--            app:layout_constraintStart_toStartOf="@+id/guideline05v"-->
<!--            app:layout_constraintTop_toTopOf="@+id/guideline35h"-->
<!--            tools:context=".HomeFragment" />-->

        <FrameLayout
            android:id="@+id/mapFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline75h"
            app:layout_constraintEnd_toStartOf="@+id/guideline95v"
            app:layout_constraintStart_toStartOf="@+id/guideline05v"
            app:layout_constraintTop_toTopOf="@+id/guideline35h">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>